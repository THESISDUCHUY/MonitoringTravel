@model MonitoringTourSystem.ViewModel.HomeViewModel

@{
    if (Model == null || Model.TourWithTourGuide == null)
        {
            <p>Không có tour nào đang hoạt động</p>
        }
    else
    {
        foreach (var item in Model.TourWithTourGuide)
        {
            <ul class="list-tour" id="nav-accordion">
                <li class="sub-menu">
                  
                    <a onclick="getMarkerSelected(@item.TourGuide.tourguide_id);" href="javascript:;">
                        <h4 style="color: black">@item.TourGuide.tourguide_name</h4>
                        <span>@item.Tour.tour_code</span>
                    </a>
                    <ul class="sub" style="overflow: hidden; display: none;">
                        <li>
                            <a id="myBtn" onclick="showPopup();" href="#">Gửi cảnh báo</a>
                        </li>
                        <li>
                            <a href="/webadmin/BeaconUsage">Chat</a>
                        </li>
                        <li>
                            <a href="/webadmin/BeaconUsage">Thông tin chi tiết</a>
                        </li>
                    </ul>
                </li>
            </ul>
        }
    }
}

