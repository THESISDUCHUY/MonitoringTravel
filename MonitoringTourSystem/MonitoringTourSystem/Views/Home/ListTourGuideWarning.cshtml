@model MonitoringTourSystem.ViewModel.HomeViewModel

@{
    if (Model == null || Model.TourWithTourGuide == null || Model.TourWithTourGuide.Count == 0)
    {
        <div class="alert alert-info" style="margin-top: 20px; margin-left: 20px; margin-right: 20px;">
            Không có tour nào nằm trong bán kính này.
        </div>
    }
    else
    {
        foreach (var item in Model.TourWithTourGuide)
        {
            <ul class="list-tour" id="nav-accordion">
                <li class="sub-menu">

                    <a onclick="getMarkerSelected(@item.TourGuide.tourguide_id);" href="javascript:;">
                        <h4 style="color: black; font-size: 14px;">@item.TourGuide.tourguide_name</h4>
                        <span style="font-size: 12px;">@item.Tour.tour_code</span>
                    </a>

                </li>
            </ul>
        }
    }
}

